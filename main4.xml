<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.exaple.myfirstapp.Activity4"
    android:background="@drawable/book"
     >

    <Button
        android:id="@+id/buttonx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/buttonx" />

    <Button
        android:id="@+id/buttony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonx"
        android:layout_alignRight="@+id/buttonx"
        android:layout_below="@+id/buttonx"
        android:text="@string/buttony" />

    <Button
        android:id="@+id/buttonz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttony"
        android:layout_alignRight="@+id/buttony"
        android:layout_below="@+id/buttony"
        android:text="@string/buttonz" />

</RelativeLayout>